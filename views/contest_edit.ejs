                    <input type="checkbox"<% if (contest.is_enabled || !contest.id ) { %> checked<% } %> name="is_enable">
                    <label><span style="visibility: hidden; ">　</span></label>
                  </div>
                </div>
                <div class="inline field">
                  <label class="ui header">隐藏统计信息</label>
                  <div class="ui toggle checkbox">
                    <input type="checkbox"<% if (contest.hide_statistics) { %> checked<% } %> name="hide_statistics">
                    <label><span style="visibility: hidden; ">　</span></label>
                  </div>
                </div>
              </div>

              <div class="title">
                <h4><i class="dropdown icon"></i>试题列表</h4>
              </div>
              <div class="content font-content" >
                <div class="field">
                  <input type="hidden" id="problems" name="problems">
                  <label>搜索题目</label>
                  <select class="ui fluid search dropdown" multiple="" id="search_problems">
                    <option value="">Type for Searching.</option>
                  </select>
                  <table class="ui very basic table"> 
                    <thead>
                      <tr>
                        <th class="one wide">ID</th>
                        <th >题目</th>
                        <th class="one wide center aligned">操作</th>
                      </tr>
                    </thead>
                    <tbody id="problem_table">
                      <% for (let problem of problems) { %>
                        <tr id="<%= problem.id %>" style="height: 32px">
                          <td>#<%= problem.id %></td>
                          <td><%= problem.title %></td>
                          <td>
                            <div class="ui buttons center aligned">
                            <button type="button" onclick="moveUp(this);" class="ui icon button"><i class="arrow up icon"></i></button>
                            <button type="button" onclick="moveDown(this);" class="ui icon button"><i class="arrow down icon"></i></button>
                            <button type="button" onclick="deleteRow(this);" class="ui icon button"><i class="trash alternate icon"></i></button>
                            </div>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="title">
                <h4><i class="dropdown icon"></i>人员管理</h4>
              </div>
              <div class="content font-content">
                <div class="field">
                  <label>比赛管理员</label>
                  <select class="ui fluid search dropdown" multiple="" id="search_admins" name="admins">
                  <option value="">Type for Searching.</option>
                  <% for (let admin of admins) { %>
                    <option value="<%= admin.id %>.u" selected class=""><%= admin.username %></option>
                  <% } %>
                  </select>
                </div>
              </div>

              <div class="title ">
                <h4><i class="dropdown icon"></i>比赛机制</h4>
              </div>
              <div class="content font-content">
                <div class="inline fields">
                  <label>赛制</label>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input <% if (contest.id) { %>disabled <% } %>type="radio" name="type" id="type-noi" value="noi"<% if (contest.type === 'noi') { %> checked="checked"<% } %>>
                      <label for="type-noi">NOI</label>
                    </div>
                  </div>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input <% if (contest.id) { %>disabled <% } %>type="radio" name="type" id="type-ioi" value="ioi"<% if (contest.type === 'ioi') { %> checked="checked"<% } %>>
                      <label for="type-ioi">IOI</label>
                    </div>
                  </div>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input <% if (contest.id) { %>disabled <% } %>type="radio" name="type" id="type-acm" value="acm"<% if (contest.type === 'acm' || !contest.id) { %> checked="checked"<% } %>>
                      <label for="type-acm">ICPC</label>
                    </div>
                  </div>
                  <a href="/wiki/contest_type" target="_blank">赛制详细介绍</a>
                </div>

